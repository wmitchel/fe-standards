{
  "extends": "stylelint-config-recommended",
  "plugins": [
    "stylelint-selector-bem-pattern"
  ],
  "rules": {
    "plugin/selector-bem-pattern": {
      "preset": "bem",
      "implicitComponents": "src/**/*.scss",
    },
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": ["function", "return", "if", "else", "each", "include", "mixin"]
    }]
  }
}